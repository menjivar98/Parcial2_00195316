<% include partials/_header %>

<div class="container">
    <div class="row">
        <div class="col-md-7 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id%>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Titulo" class="form-control" value="<%= task.title%>">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control" placeholder="Calificacion" value="<%=task.description%> "></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </form>
                </div>
        </div>
    </div>
</div>




<% include partials/_footer%>









